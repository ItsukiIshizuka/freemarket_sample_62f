$blue: #0099e8;
$red: #ea352d;
$black: #212121;
$white: #fff;
$gray: #ccc;
$aqua: #d9edef;
$light-gray: #f3f3f3;
$yellow-gray: #f4f3ee;
$brown: #7b4626;

$small: 1.4rem;
$medium: 1.6rem;

$break-point: (
  more-sm: 768px,
  more-md: 1068px
);

@mixin media-queries($key) {
  @media(min-width: map-get($break-point, $key)) {
    @content;
  }
}

@mixin responsive-width {
  @include media-queries(more-sm) {
    width: 700px;
  }

  @include media-queries(more-md)  {
    width: 1020px;
  }

  margin: auto;
}

@mixin clearfix {
  &:after {
    content: "";
    display: block;
    clear: both;
  }
}

@mixin block {
  display: block;
  position: relative;
  width: 100%;
}

@mixin inner {
  width: 90%;
  max-width: 980px;
  margin: 0 auto;
}

html {
  height: 100%;
  background-color: $white;
  font-size: 62.5%;

  color: $black;

  font-family: Arial,游ゴシック体,YuGothic,メイリオ,Meiryo,sans-serif;
  font-weight: 500;
  //letter-spacing: 0.05em;
}

body {
  height: 100%;
  font-size: 0;
}

* {
  box-sizing: border-box;
}

button {
  background-color: transparent;
  border: none;
  cursor: pointer;
  outline: none;
  padding: 0;
  appearance: none;
}

a {
  text-decoration: none;
  color: $black;
}

.header {
  @include block;
  @include clearfix;

  padding-top: 0.8rem;

  background-color: $white;
  border-bottom: 0.1rem solid $light-gray;

  z-index: 3;

  &__upper-contents {
    @include responsive-width;

    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-pack: justify;

    height: 4.0rem;

    background-color: transparent;

    &__logo {
      display: block;
      width: 13.4rem;

      margin-right: 4.5rem;
    }

    &__search {
      @include block;

      &-box {
        width: 100%;
        height: 4.0rem;
        padding: 0 4.2rem 0 1.0rem;

        font-size: $medium;
        background-color: $light-gray;

        border-radius: 0.4rem;
        outline-style: none;
        border: 0.1rem solid $gray;
      }

      &-button {
        position: absolute;
        right: 1.2rem;
        top: 0;

        font-size: $medium;
        line-height: 4.0rem;
      }
    }
  }

  &__lower-contents {
    @include responsive-width;
    @include clearfix;

    height: 4.4rem;
    margin-top: 0.8rem;

    &__left-contents {
      float: left;

      &__menu {
        li {
          display: block;
          float: left;

          margin-right: 2.8rem;

          font-size: $small;
          font-weight: bold;
          line-height: 3.6rem;

          .fa {
            margin-right: 0.8rem;

            color: $red;
          }
        }
      }
    }

    &__right-contents {
      float: right;

      &__menu {
        li {
          display: block;
          float: left;

          padding: 0.8rem 1.0rem;
          margin-left: 1.2rem;

          font-size: $small;
          line-height: $small;
          color: $white;
          background-color: $red;
          border: 0.1rem solid $red;
          border-radius: 0.4rem;

          &.login {
            color: $blue;
            border: 0.1rem solid $blue;
            background-color: $white;
          }
        }
      }
    }
  }
}

.nav {
  @include block;
  @include clearfix;

  height: 4.8rem;

  background-color: $white;
  box-shadow: 0 0.3rem 0.3rem 0 rgba(0,0,0,0.16);
  z-index: 2;

  &__scope {
    @include responsive-width;

    li {
      float: left;

      font-size: $small;
      line-height: 4.8rem;

      &:after {
        content: ">";
        margin: 0 0.8rem;
      }

      &:last-child {
        font-weight: bold;

        &:after {
          content: "";
        }
      }
    }
  }
}

.main {
  @include block;
  z-index: 1;

  &__cover {
    position: relative;

    width: 100%;
    height: 40.0rem;
    background-color: $yellow-gray;
    z-index: 0;
  }

  &__leading {
    padding: 3.0rem 0 4.0rem 0;

    &__inner {
      &__text {
        font-size: $medium;
        line-height: 2.8rem;
        text-align: center;

        &-strong {
          font-weight: bold;
          color: $red;
        }
      }
    }
  }

  &__banner {
    @include inner;

    margin-bottom: 8.0rem;

    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -ms-flex-wrap: wrap;
    flex-wrap: wrap;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: space-between;

    &__main {
      width: 50%;

      &-a {
        display: block;
        width: 100%;
        height: 100%;
        border-radius: 0.5rem;
        background-color: $brown;
        overflow: hidden;
      }

      &-image {
        width: 100%;
      }

      &-text {
        font-size: $medium;
        padding: 1.2rem;

        color: white;
      }
    }

    &__sub {
      width: calc(50% - 1.0rem);

      &-a {
        display: table;
        width: 100%;
        margin-bottom: 1.0rem;
        padding: 1.2rem 1.0rem;
        border-radius: 0.5rem;
        background-color: $red;

        &:last-child {
          margin-bottom: 0;
        }
      }

      &-image {
        display: table-cell;

        border-radius: 0.5rem;

        width: 8.0rem;
        height: 8.0rem;
      }

      &-text {
        display: table-cell;
        width: 100%;
        height: 8.0rem;
        padding-left: 1.5rem;

        font-size: $medium;
        color: $white;

        vertical-align: middle;
      }
    }
  }

  &__category, &__brand {
    @include block;

    padding: 4.0rem 0 6.0rem 0;

    background-color: $yellow-gray;
    text-align: center;

    &__inner {
      @include inner;

      &__header {
        &-image {
          width: 6.0rem;
          margin-bottom: 1.0rem;
        }

        &-title {
          display: block;
          font-size: 2.0rem;
          font-weight: bold;
        }
      }

      &__list {
        display: -webkit-box;
        display: -ms-flexbox;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        -webkit-box-pack: center;
        -ms-flex-pack: center;
        justify-content: center;
        margin-top: 10px;

        &-a {
          width: 16%;
          margin: 16px 2%;
        }

        &-image {
          overflow: hidden;
          border-radius: 100px;

          width: 100%;

          box-shadow: 1px 2px 2px rgba(0,0,0,0.2);
        }

        &-title {
          font-size: $medium;
          font-weight: bold;
          margin-top: 1.2rem;
        }
      }
    }
  }

  &__category {
    background-color: $yellow-gray;
  }

  &__brand {
    background-color: $aqua;
  }

  &__others {
    //margin-top: 8.0rem;
    padding: 4.0rem 0 5.0rem 0;

    //background-color: $yellow-gray;
    text-align: center;

    &__inner {
      @include inner;

      &__header {
        display: block;
        font-size: 2.0rem;
        font-weight: bold;
      }

      &__button {
        display: block;
        width: 40.0rem;
        margin: 0 auto;
        margin-top: 2.0rem;
        padding: 1.6rem 0;
        font-size: 1.6rem;
        line-height: 1.6rem;
        border-radius: 100.0rem;
        color: $white;
        background-color: $red;
      }
    }
  }

  &__app {
    padding: 4.0rem 0 5.0rem 0;

    background-image: url("<%= asset_url('index_menu_01.png') %>");
    background-size: cover;

    &__inner {
      @include responsive-width;

      h2, h3 {
        text-shadow: 0 0 5px rgba(0,0,0,0.4);

        font-size: 1.6rem;
        color: $white;

        margin-bottom: 0.5rem;
      }

      h3 {
        font-weight: bold;
      }

      h2 {
        font-size: 2.4rem;
      }

      &__links {
        margin-top: 1.2rem;
        display: table;

        a {
          display: table-cell;
          vertical-align: middle;
          padding-right: 2.0rem;
        }

        &-mercari {
          img {
            padding: 1.2rem;
            border-radius: 1.2rem;
            background-color: $white;
            box-sizing: content-box;
          }
        }
      }
    }
  }
}

.footer {
  @include block;

  height: 20.0rem;
  background-color: $black;
}
